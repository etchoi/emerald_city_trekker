<h1>User#show</h1>
<p>Find me in app/views/user/show.html.erb</p>
<div class="container">
  <h6><a href="/">Home</a> | <a href="/user/destroy">Logout</a></h6>
  <h4>Hi <%= @user.user_name %>! Ready to explore Seattle?</h4>

  <div id="dashboard_topbar">
    <div id="profile">
      <span><%= image_tag @user.profile_pic.url (:small) %></span>
      <p>Provider Name: <b><%= @user.user_name %> </b></p>
      <p>Email: <b><%= @user.email %></b></p>
      <p>About: <b><%= @user.about %></b></p>
    </div>

    <div id="upcoming_tours">
      <% if @tours %>
        <table>
          <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Your Guide</th>
            <th></th>
          </tr>
          <% @tours.each do |x| %>
            <tr>
              <td><%= x.tour_date %></td>
              <td><%= x.tour.name %></td>
              <td><%= x.provider.name %>
              <%= image_tag x.provider.profile_pic.url (:small) %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>

  <div id="find_tour">
    <button class="btn btn-warning btn-sm" id="find_tour" type="button" action="/tour" name="find_tour"><a href="/tour">Find a Tour</a></button>
  </div>
</div>
